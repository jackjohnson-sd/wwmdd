    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python NO args",
            "type": "debugpy",
            "request": "launch",
            "program": "main.py",
            "console": "integratedTerminal",
            "args": ""
        },
        {
            "name": "Python WITH args",
            "type": "debugpy",
            "request": "launch",
            "program": "main.py",
            "console": "integratedTerminal",
            "args": [
                "-bs", "tests/world_tour/wt_args.txt",
                "-log", "-colors","tests/world_tour/wt_color_white.json"
            ]
        },
        {
            "name": "Python CAUSE ERROR",
            "type": "debugpy",
            "request": "launch",
            "program": "main.py",
            "console": "integratedTerminal",
            "args": [
                "-s","web","-t","OKC"
            ]
        }
    ]
}