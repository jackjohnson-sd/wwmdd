    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: NO args",
            "type": "debugpy",
            "request": "launch",
            "program": "main.py",
            "console": "integratedTerminal",
            "args": ""
        },
        {
            "name": "Python Debugger: WITH args",
            "type": "debugpy",
            "request": "launch",
            "program": "main.py",
            "console": "integratedTerminal",
            "args": [
                "-bs", "tests/bs_test/args.txt", 

            ]
        }
    ]
